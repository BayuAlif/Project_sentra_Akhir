    <section id="banner-shop" class="contact-banner">
        <h2>LETS TALK TO US</h2>
        <p>Leave a message to us, we love hear from you</p>
    </section>

    <div class="pop-up">
        <div class="box-pop">
            <img src="images/berhasil.gif" alt="">
        </div>
    </div>


    <section id="contact">
        <div class="contact-body">
            <div class="contact-info">
                <div>
                    <span><i class="ri-smartphone-line"></i></span>
                    <span>Phone No</span>
                    <span class="text">+62 859-2052-2446</span>
                </div>
                <div>
                    <span><i class="ri-mail-line"></i></span>
                    <span>E-MAIL<span>
                            <span class="text">bayualif170505@gmail.com</span>
                </div>
                <div>
                    <span><i class="ri-map-pin-line"></i></span>
                    <span>Address</span>
                    <span class="text">Jl. Raya Daan Mogot No.KM. 11, RT.1/RW.4, Kota Jakarta Barat</span>
                </div>
            </div>
            <div class="contact-form">

